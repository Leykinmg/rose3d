@import "../../styles/variables"

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

.input
    height: 30px
    width: 100%
    padding: 6px 12px
    font-size: 13px
    line-height: 1.42857143
    color: $text-color
    border-width: 0
    border-style: solid

    &[disabled]
        cursor: not-allowed
        opacity: .65
        background-color: white

