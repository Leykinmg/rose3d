@import "../styles.styl"

$z-index-float = 500
$visualizer-padding = 10px

.visualizer
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0

.visualizer-top-left
    position: absolute
    top: $visualizer-padding
    left: $visualizer-padding
    z-index: $z-index-float

    .rose-icon
        display: inline-block
        position: relative
        float: left
        width: 30px
        height: 30px
        background-color: $background-color
        margin-left: 10px
        padding: 0

    .btn-select
        display: inline-block
        position: relative
        width: 100px
        height: 30px
        background-color: $background-color
        margin-left: 10px
        padding: 0
        border: 1px solid $border-color
        border-radius: 0



    .btn-top-left
        display: inline-block
        position: relative
        float: left
        width: 30px
        height: 30px
        background-color: $background-color
        margin-left: 10px
        padding: 0
        border: 2px solid $border-color
        border-radius: 0px

        .btn-undo
        .btn-redo
        .btn-reset
        .btn-remove
            width: 100%
            height: 100%
            background-repeat: no-repeat
            background-position: center
        .btn-undo
            background-image: url("/images/14x14/undo-a.png")
        .btn-redo
            background-image: url("/images/14x14/redo-a.png")
        .btn-reset
            background-image: url("/images/14x14/reset-normal-14x14.png")
        .btn-remove
            background-image: url("/images/14x14/delete-normal-14x14.png")
        &:hover
            background-color: $btn-default-background-color-hover
            .btn-undo
                background-image: url("/images/14x14/undo-b.png")
            .btn-redo
                background-image: url("/images/14x14/redo-b.png")
            .btn-reset
                background-image: url("/images/14x14/reset-hover-14x14.png")
            .btn-remove
                background-image: url("/images/14x14/delete-hover-14x14.png")
        &:disabled
            opacity(.5)
            background-color: $white
            .btn-undo
                background-image: url("/images/14x14/undo-c.png")
            .btn-redo
                background-image: url("/images/14x14/redo-c.png")
            .btn-reset
                background-image: url("/images/14x14/reset-disabled-14x14.png")
            .btn-remove
                background-image: url("/images/14x14/delete-disabled-14x14.png")






.visualizer-model-transformation
    z-index: $z-index-float
    position: relative
    left: $visualizer-padding
    top: 50%
    transform: translate(0, -50%)
    border-radius: 0px
    width: 56px

    .btn-lay
        height: 30px
        width: 195px
        cursor: default
        position relative
        left 20px

    .model-transformation__open
        position: relative
        //top: px
        bottom: 20px
        border: 0px solid $border-color


    .model-transformation__container
        position: relative
        border: 0px solid $border-color
        &.disabled
            opacity(.5)

    .model-extruder__select
        position: relative
        top: 20px
        //border: 1px solid $border-color

    .model-isStick
        position: relative
        top: 20px
        left: 20px

    .model-operation
        display: block
        width: 56px
        height: 64px
        border: 0px solid $border-color
        padding: 0
        background-color: $background-color
        background-repeat: no-repeat
        background-position: center

        &.operation-open
            border: 1px solid $border-color
            border-top-left-radius: $border-radius
            border-top-right-radius: $border-radius
            background-image: url('/images/48x48/open-a.png')
        &.operation-move
            border: 1px solid $border-color
            border-bottom: 0px
            background-image: url('/images/48x48/move-a.png')
        &.operation-scale
            border: 1px solid $border-color
            border-top: 0px
            border-bottom: 0px
            background-image: url('/images/48x48/scale-a.png')
        &.operation-rotate
            border: 1px solid $border-color
            border-top: 0px
            background-image: url('/images/48x48/rotate-a.png')

        &:hover,
        &.selected
            background-color: $dark-red-color
            border-color: $dark-red-color
            &.operation-open
                background-image: url('/images/48x48/open-b.png')
            &.operation-move
                background-image: url('/images/48x48/move-b.png')
            &.operation-scale
                background-image: url('/images/48x48/scale-b.png')
            &.operation-rotate
                background-image: url('/images/48x48/rotate-b.png')

        &:disabled
            background-color: $background-color
            border-color: $border-color
            &.operation-open
                background-image: url('/images/48x48/open-c.png')
            &.operation-move
                background-image: url('/images/48x48/move-c.png')
            &.operation-scale
                background-image: url('/images/48x48/scale-c.png')
            &.operation-rotate
                background-image: url('/images/48x48/rotate-c.png')

    > .panel
        background-color: rgba(250, 250, 250, 0.3)
        display: block
        width: 235px
        position: absolute
        left: (56px + $visualizer-padding)
        border: 1px solid $border-color
        border-radius: $border-radius
        opacity(.8)

        &.move-panel
            top: 0
            height: 93px
            transform: translate(0, 64px * 1.5 - 93px / 2)
        &.scale-panel
            top: 0
            transform: translate(0, 64px * 2.5 - 133px / 2)
            height: 133px
            width: 118px
        &.rotate-panel
            top: 0
            transform: translate(0, 64px * 3 - 133px / 2)
            height: 163px

        .axis
            margin: 12px 0
            height: 27px
            width: 100%
            position: relative
        .axis-green
            color: #22ac38
        .axis-red
            color: #e93100
        .axis-blue
            color: #00b7ee
        .axis-label
            display: inline-block
            width: 30px
            height: 30px
            line-height: 34px
            text-align: center
            font-size: 16px
            float: left
        .axis-slider
            margin-left: 8px
            display: inline-block
            width: 108px

        // move & rotate
        // axis-input-1 for move panel
        .axis-input-1
            display: inline-block
            > input
                width: 80px

        .axis-unit-1
        .axis-unit-2
        .axis-unit-3
            position: absolute
            float: left
            top: 6px
            color: $grey-color

        // mm
        .axis-unit-1
            left: 75px
        // %
        .axis-unit-2
            left: 85px
        // Â°
        .axis-unit-3
            left: 90px

.visualizer-camera-operations
    z-index: $z-index-float
    position: absolute
    right: $visualizer-padding
    top: $visualizer-padding

    .turn-left
    .turn-right
    .turn-up
    .turn-down
    .camera-reset
        display: block
        width: 28px
        height: 28px
        line-height: 28px
        text-align: center
        background-color: $background-color
        border: 1px solid $border-color
        background-repeat: no-repeat
        background-position: center
            //opacity(.5)
        &:active
            opacity(.3)

    .turn-left
        margin-top: 28px
        border-top-left-radius: $border-radius
        border-bottom-left-radius: $border-radius
        background-image: url("/images/18x18/left-a.png")
        border-right: 0
        &:hover
            background-image: url("/images/18x18/left-b.png")

    .turn-right
        margin-top: 28px
        border-top-right-radius: $border-radius
        border-bottom-right-radius: $border-radius
        background-image: url("/images/18x18/right-a.png")
        border-left: 0
        &:hover
            background-image: url("/images/18x18/right-b.png")
    .turn-up
        border-top-left-radius: $border-radius
        border-top-right-radius: $border-radius
        background-image: url("/images/18x18/up-a.png")
        border-bottom: 0
        &:hover
            background-image: url("/images/18x18/up-b.png")

    .turn-down
        border-bottom-left-radius: $border-radius
        border-bottom-right-radius: $border-radius
        background-image: url("/images/18x18/Down-a.png")
        border-top: 0
        &:hover
            background-image: url("/images/18x18/Down-b.png")

    .camera-reset
        border-bottom-left-radius: $border-radius
        border-bottom-right-radius: $border-radius
        background-image: url("/images/18x18/M-a.png")
        border: 0
        &:hover
            background-image: url("/images/18x18/M-b.png")

