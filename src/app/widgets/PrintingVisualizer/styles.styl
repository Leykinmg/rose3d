.visualizer-preview-control
    z-index: $z-index-float
    position: absolute
    right: $visualizer-padding - 5px
    top: 160px
    width: 22px

    .vertical-slider
        position: absolute
        top: 55px
        height: 288px
        left: 1px

    .vertical-handle
        position: absolute
        width: 20px
        height: 20px
        line-height: 20px
        text-align: center
        transform: translate(0, 50%)
        margin-left: -8px
        color: white
        background-color: $dark-color

        &:hover
            opacity(.5)

    .toggle-btn
        display: block
        width: 20px
        height: 20px
        line-height: 20px
        text-align: center
        background-color: $background-color
        margin-top: 15px
        &:hover
            opacity(.5)
        &:active
            opacity(.3)

    .layer-label
        width: 100%
        text-align: center
        color: $desc-text-color

    > .preview-panel
        background-color: rgba(255, 250, 250, 0.3)
        display: block
        width: 170px
        position: absolute
        top: 142px
        right: 40px
        border: 1px solid $border-color
        padding: 5px 8px 0px

        .preview-title
            font-weight: bold
            margin-bottom: 10px
        .preview-type
            display: block
            height: 24px
            > input
                margin-right: 4px
        .preview-brick
            display: inline-block
            width: 14px
            height: 14px
            margin-top: 2px
            float: right
